{
  "name": "virtual-template-ied",
  "description": "Webcomponent virtual-template-ied following open-wc recommendations",
  "license": "Apache-2.0",
  "author": "virtual-template-ied",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc --p tsconfig.test.json && wtr --coverage",
    "test:unit": "tsc --p tsconfig.test.json && wtr --group default",
    "test:watch": "tsc --p tsconfig.test.json && concurrently -k -r \"tsc --p tsconfig.test.json --watch --preserveWatchOutput\" \"wtr --watch\"",
    "build": "rimraf dist &&tsc && npm run analyze -- --exclude dist",
    "build:module": "rimraf dist && rollup -c rollup.config.js",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\""
  },
  "dependencies": {
    "lit-element": "2.5.1",
    "lit-html": "1.4.1",
    "@material/mwc-dialog": "^0.27.0",
    "@material/mwc-list": "^0.27.0",
    "@material/mwc-select": "^0.27.0",
    "@openscd/oscd-filtered-list": "^1.1.0",
    "@openscd/open-scd-core": "^0.0.2",
    "@openscd/oscd-scl": "*",
    "@openscd/oscd-textfield": "*"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-rollup": "^2.0.2",
    "@open-wc/eslint-config": "^9.2.1",
    "@open-wc/testing": "^3.1.6",
    "@rollup/plugin-typescript": "^9.0.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-storybook": "^0.5.4",
    "@web/rollup-plugin-html": "^1.11.0",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.14.0",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "cem-plugin-readme": "^0.1.4",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.2.2",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "sinon": "^11.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-workbox": "^6.2.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-shadow": "off",
      "no-loop-func": "off",
      "no-plusplus": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
